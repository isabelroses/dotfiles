root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = false

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{nix,yml,yaml}]
indent_style = space
indent_size = 2
tab_width = 2

[*.yuck]
indent_style = spaces
indent_size = 4

[*.js]
indent_style = spaces
indent_size = 2

[*.{diff,patch}]
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset

[secrets.yaml]
indent_size = unset

[*.lock]
indent_size = unset
