{
    "layer": "top",
    "position": "top",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "margin-left": 2,
    "margin-right": 2,
    "height": 0,
    "modules-left": [
        "custom/launcher",
        "image#browser"
    ],
    "modules-center": [
        "wlr/workspaces"
    ],
    "modules-right": [
        "tray",     
        "custom/updates",
        "backlight",
        "network",
        // "bluetooth",
        "pulseaudio",
        "battery",
        "clock",
        "custom/logout"
    ],

    "hyprland/window": {
        "format": "{}"
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 20,
        "icon-theme": "Star",
        "tooltip-format": "{title}",
        "on-click": "minimize",
        "on-click-middle": "close",
        "on-click-right": "activate"
    },
    "wlr/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
	    "sort-by-number": true,
        "on-click": "activate",
        "format": "{icon}",
	    "format-icons": {
            "1": "‰∏Ä",
            "2": "‰∫å",
            "3": "‰∏â",
            "4": "Âõõ",
            "5": "‰∫î",
            "6": "ÂÖ≠",
            "7": "‰∏É",
            "8": "ÂÖ´",
            "9": "‰πù",
            "10": "ÂçÅ"
        }
    },
    "tray": {
        "icon-size": 13,
        "spacing": 10
    },
    "clock": {
        "format": "{:ÔÄó %R  ÔÅ≥ %d/%m}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "üîá",
        "on-click": "pamixer -t",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "Ô°´ {volume}%",
        "format-source-muted": "Ô°¨ Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´",
        "format-ethernet": "ÔÉ®",
        "tooltip-format": "{essid} ({signalStrength}%)",
        "format-linked": "{ifname} (No IP) ÔÉ®",
        "format-disconnected": "‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "backlight": {
        "tooltip": false,
        "format": "ÔÉ´ {}%",
        "interval":1,
        "on-scroll-up": "light -A 5",
        "on-scroll-down": "light -U 5"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon}  {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "bluetooth": {
	"format": "Ôäì",
	"format-connected-battery": "Ôäì {icon}",
	"tooltip-format": "{controller_alias}\t{controller_address}\n{status}",
	"tooltip-format-off": "{controller_alias}\t{controller_address}\n{status}",
	"tooltip-format-connected": "{controller_alias}\t{controller_address}\n{num_connections} {status}\n{device_enumerate}",
	"tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
	"tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
	"format-icons": {
		"default": [ "ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
	},
	"on-click": "$term -e bluetoothctl",
	"on-click-right": "killall bluetoothctl",
	"on-scroll-up": "bluetoothctl power on",
	"on-scroll-down": "bluetoothctl power off"
    },
    "custom/logout": {
        "format": "ÔÄë ",
        "on-click": "wlogout --protocol layer-shell -b 5 -T 400 -B 400",
        "on-right-click": "wlogout --protocol layer-shell -b 5 -T 400 -B 400",
	"tooltip": false
    },
    "custom/launcher": {
        "format": "ÔåÉ",
        "on-click": "rofi -show drun",
        "on-click-right": "rofi -show drun"
    },
    "custom/updates": {
        "exec": "(pacman -Qu ; yay -Qua) | wc -l",
        // checkupdates ; if [ $(yay -Qua | wc -l) != 1 ] || [ $(pacman -Qu | wc -l) != 0 ]; then $(($(yay -Qua | wc -l) + $(pacman -Qu | wc -l))) fi
        "exec-if": "[ ((pacman -Qu ; yay -Qua) | wc -l) != 0 ]",
        "interval": 7200,
        "format": "Ôõô {}",
        "on-click": "$TERM -e yay -Syu"
    },
    "image#browser": {
	"path": "/home/xon/.local/share/icons/Papirus-Dark/24x24/apps/chromium-browser.svg",
	"on-click": "chromium",
	"on-click-right": "chromium",
	"size": 24,
	"interval": 5
    }
    // "custom/weather" : {
    //     "tooltip" : true,
    //     "format" : "{}",
    //     "interval" : 30,
    //     "exec" : "~/.config/waybar/scripts/waybar-wttr.py",
    //     "return-type" : "json"
    // }   
}
