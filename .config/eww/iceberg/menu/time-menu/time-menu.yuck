(defwidget notifs-box[]
  (scroll
    :vscroll true
    :height 500
    (box
      :class "container"
      :orientation "v"
      :space-evenly false
      :vexpand true
      (for i in notifications
        (eventbox
          :onclick "dunstctl history-pop ${i.id} && dunstctl action 0 && dunstctl close"
          (box
            :class "notification"
            :orientation "v"
            :width 300
            :vexpand true
            :space-evenly false
            (centerbox
              :space-evenly false
              (label
                :xalign 0
                :wrap true
                :class "summary"
                :text {i.summary}
              )
              (label)
              (label
                :xalign 1
                :wrap true
                :class "appname"
                :text {i.appname}
              )
            )
            (label
              :xalign 0
              :wrap true
              :class "body"
              :text {i.body}
            )
          )
        )
      )
    )
  )
)

