(defwidget powermenu_clock [] (box
    :orientation "v"
    :class "clock"
    :space-evenly false
    :halign "center"
    :valign "center"
    :hexpand true
    (box    :class "hour"
            :space-evenly false
            (label :text hour)
            (label :text ":")
            (label :text minutes))
    (label  :class "date" :text date)
    (label  :class "uptime" :text "uptime: ${uptime}")
))

(defwidget powermenu_user [] (box
    :orientation "v"
    :class "user"
    :space-evenly false
    :halign "center"
    :valign "center"
    :hexpand true
    (box    :class "image")
    (label  :text "Demeter")
    (label  :text "GoodBye!")
))

(defwidget powerbutton [action icon label] (box
    :orientation "v"
    :space-evenly false
    :tooltip label
    :class "button-bin" 
    (button
        :class "button"
        :onclick action
        (box :class "icon ${icon}" )
    )
    (label :class "label" :text label)
))

(defwidget powermenu [] (eventbox
    :onclick "${EWW_CONFIG_DIR}/scripts/launcher toggle_menu powermenu" 
    (box
    :class "content"
    :halign "center"
    :valign "center"
    :orientation "v"
    :space-evenly false
    ; (box :orientation "h"
    ;     :space-evenly false
    ;     (powermenu_user)
    ;     (powermenu_clock))
    (box
        :class "power-menu"
        :space-evenly false
        :orientation "h"
        (powerbutton :action "swaylock"                                      :icon "lock" :label "Lock Screen")
        (powerbutton :action "systemctl suspend"                             :icon "suspend" :label "Suspend")
        (powerbutton :action "systemctl reboot"                              :icon "reboot" :label "Restart")
        (powerbutton :action "hyprctl dispatch exit 0"                       :icon "logout" :label "Log Out")
        (powerbutton :action "systemctl poweroff"                            :icon "shutdown" :label "Shutdown")
    )
)))
