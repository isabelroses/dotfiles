(defwidget events [] (box
    :class "events widget"
    :orientation "v"
    :space-evenly false
    :visible {arraylength(events) > 0}
    (box
        :class "box-title"
        (label :text "Todo" :halign "START")
        (label :text "Deadline" :halign "END")
    )
    (box
        :class "events-box"
        :orientation "v"
        (for event in events
            (box
                :space-evenly false
                :class "event ${event.asap ? "urgent" : ""}"
                (eventbox
                    :hexpand true
                    :class "title"
                    (overlay
                        (label
                            :halign "START"
                            :limit-width 21 ;wrap doesn't work?
                            :text {event.title}
                        )
                        (button
                            :halign "END"
                            :class "done"
                            :onclick "${EWW_CONFIG_DIR}/scripts/todo -r ${event.id}"
                            (label :text "ï€Œ" :class "icon")
                        )
                    )
                )
                (label
                    :class "date"
                    :text {event.date} 
                )
            )
        )
    )
))
